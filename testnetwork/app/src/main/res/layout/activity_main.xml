<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/get_mobile_signal_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="移动信号" />

    <Button
        android:id="@+id/get_wifi_signal_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wi-Fi信号"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@+id/get_mobile_signal_button"/>

    <Button
        android:id="@+id/get_net_interface_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="网络接口"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@+id/get_wifi_signal_button"/>

    <Button
        android:id="@+id/http_get_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="http请求"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/get_mobile_signal_button"/>

    <Button
        android:id="@+id/tcp_conn_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TCP请求"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toBottomOf="@+id/get_wifi_signal_button"
        app:layout_constraintLeft_toRightOf="@+id/http_get_button"/>

</androidx.constraintlayout.widget.ConstraintLayout>